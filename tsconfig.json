{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    // "lib": ["esnext", "dom"],
    "baseUrl": ".",                  // Base directory for non-relative module names
    "paths": {
      "@/*": ["src/*"]               // Map @ to the src directory
    },
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
